    <pawnNameMaker>NamerPersonTribal</pawnNameMaker> <!--todo-->
    <techLevel>Industrial</techLevel>
	
    
    <leaderTitle>mayor</leaderTitle>
    <hairTags>
      <li>Rural</li>
	  <li>Urban</li>
    </hairTags>
	
    <raidCommonalityFromPointsCurve>
    <points>
