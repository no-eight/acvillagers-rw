    <colorSpectrum>
      <li>(0.0, 0.63, 0.31)</li>
    </colorSpectrum>

<backstoryFilters>
      <li>
        <categories>
          <li>Outlander</li>
        </categories>
        <commonality>1.0</commonality>
      </li>
</backstoryFilters>

