  <ThingDef ParentName="BaseVillagerMakeableGun">
    <defName>Gun_GoldenSlingshot</defName>
    <label>golden slingshot</label>
    <description>A rare slingshot which fires three pellets with a single draw.</description>
    <graphicData>
      <texPath>Things/Weapons/Slingshot_Golden</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Bow_Small</soundInteract>
    <costList>
      <Steel>40</Steel>
      <Gold>10</Gold>
    </costList>
    <statBases>
      <WorkToMake>7000</WorkToMake>
      <Mass>2.0</Mass>
      <AccuracyTouch>0.40</AccuracyTouch>
      <AccuracyShort>0.48</AccuracyShort>
      <AccuracyMedium>0.36</AccuracyMedium>
      <AccuracyLong>0.26</AccuracyLong>
      <RangedWeapon_Cooldown>1.0</RangedWeapon_Cooldown>
    </statBases>
    <weaponTags>
      <li>ACSlingshot</li>
    </weaponTags>
    <recipeMaker>
      <recipeUsers>
        <li>TableMiniDIY</li>
      </recipeUsers>
      <skillRequirements>
        <Crafting>7</Crafting>
      </skillRequirements>
      <researchPrerequisite>ACVillagerWeapons</researchPrerequisite>
    </recipeMaker>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_GoldenSlingshot</defaultProjectile>
        <warmupTime>1.0</warmupTime>
        <range>16</range>
        <ticksBetweenBurstShots>3</ticksBetweenBurstShots>
        <burstShotCount>3</burstShotCount>
        <soundCast>Bow_Small</soundCast>
      </li>
    </verbs>
    <tools>
      <li>
        <label>handle</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>7</power>
        <cooldownTime>1.8</cooldownTime>
      </li>
    </tools>
  </ThingDef>
  
